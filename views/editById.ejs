<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <!--viewport for responsive we`b design-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <!--include bootstrap css-->
    <% include partials/headerTemplate.ejs %>

    <title>Receipe Book</title>
  </head>
  <body>

       <div class="container">

         <div class="row">

            <div class="col-md-offset-2 col-md-7">

              <h1>Receipe Book</h1>

              <%=title%>


              <form  action="/update/<%=receipes._id%>" method="post">
                <div class="form-group">
                  <label>Receipe</label>
                  <input type="text" name="title" class="form-control" value="<%=receipes.title%>">
                </div>

                <div class="form-group">
                  <label>Ingredients</label>
                  <textarea name="ingredients" rows="3" cols="20" class="form-control" value="<%=receipes.ingredients%>">
                  </textarea>
                </div>

                <div class="form-group">
                  <label>Directions</label>
                  <textarea name="directions" rows="8" cols="80" class="form-control" value="<%=receipes.directions%>">
                  </textarea>
                </div>

                <button type="submit" class="btn btn-primary">Edit changes</button>
              </form>


<!--Edit form Modal-->


    <%include partials/footerTemplate.ejs%>
  </body>
</html>
